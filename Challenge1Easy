import java.util.Scanner;
public class Challenge1Easy {
	/*
	 * 	create a program that will ask the users name, age, and reddit username.
	 *      have it tell them the information back, in the format:
         *	your name is (blank), you are (blank) years old, and your username is (blank)
	 * 
	 */
	public static void main(String[] args){
		
	Scanner input = new Scanner(System.in);
	String name = "";	                  //Used to hold the user's name
	String userName = "";			  //Used to hold the user's username
	int age;				  //Used to hold the user's age
	
	System.out.println("Enter your name: ");	
	name = input.next();
	System.out.println("Enter your age: ");
	age = input.nextInt();
	System.out.println("Enter your username: ");
	userName = input.next();

	System.out.println("Your name is " + name + ", you are " + age + " years old, and your username is " + userName + ".");
	}
}
